@model IEnumerable<Event_Registration_System.Models.Event>

@{
    ViewData["Title"] = "Home Page";
}

<h1>Upcoming Events</h1>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Date</th>
            <th>Description</th>
            <th>Capacity</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var eventItem in Model)
        {
            <tr>
                <td>@eventItem.Title</td>
                <td>@eventItem.Date.ToString("MM/dd/yyyy")</td>
                <td>@eventItem.Description</td>
                <td>@eventItem.Capacity</td>
                <td>
                    <a asp-controller="Home" asp-action="Details" asp-route-id="@eventItem.Id" class="btn btn-primary">View Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>